<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox
        fx:id="appRoot"
        fx:controller="com.praveenray.notes.ui.ApplicationLayoutController"
        stylesheets="/scenes/stylesheet.css"
        prefWidth="800"
        styleClass="application-window-padding"
        xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
>
    <VBox fx:id="container" alignment="CENTER">
    </VBox>
    <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
        <Button styleClass="button-transparent" onAction="#showDebug">
            <graphic>
                <FontIcon iconLiteral="far-lightbulb"/>
            </graphic>
        </Button>
    </HBox>
</VBox>